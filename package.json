{
  "name": "keycloak",
  "version": "1.0.0",
  "description": "Integrates Keycloak with Node.js and React for authentication and authorization",
  "main": "index.js",
  "private": true,
  "keywords": [
    "keycloak",
    "node.js",
    "react",
    "typescript"
  ],
  "author": "tigredonorte3@gmail.com",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "run": "docker compose up --build --timestamps -d",
    "dev": "docker compose up --build --timestamps --watch --attach api --attach web",
    "drop": "docker compose down -v --remove-orphans --rmi all",
    "dev:server": "ts-node-dev --respawn --transpile-only index.js",
    "dev:web": "vite ./web --host 0.0.0.0"
  },
  "dependencies": {
    "@keycloak/keycloak-admin-client": "^26.0.1",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.18.1",
    "keycloak-connect": "^26.0.0",
    "keycloak-js": "^26.0.0",
    "node-fetch": "^2.6.11",
    "nodemailer": "^6.9.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.25.1",
    "@babel/cli": "^7.25.6",
    "@babel/core": "^7.25.2",
    "@babel/node": "^7.25.0",
    "@babel/plugin-proposal-do-expressions": "^7.24.7",
    "@babel/plugin-proposal-export-default-from": "^7.24.7",
    "@babel/plugin-transform-logical-assignment-operators": "^7.20.7",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-transform-optional-chaining": "^7.25.8",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.11.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.8",
    "@types/node-fetch": "^2.6.11",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8"
  }
}
