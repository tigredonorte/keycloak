{
  "realm": "${REALM}",
  "enabled": true,
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "smtpServer": {
    "host": "${SMTP_HOST}",
    "port": "${SMTP_PORT}",
    "user": "${SMTP_USER}",
    "password": "${SMTP_PASSWORD}",
    "from": "${SMTP_FROM}",
    "auth": "true",
    "starttls": "true"
  },
  "userManagedAccessAllowed": true,
  "clients": [
    {
      "clientId": "frontend-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": [
        "${FRONTEND_URL}/*"
      ],
      "webOrigins": [
        "${FRONTEND_URL}"
      ],
      "rootUrl": "${FRONTEND_URL}",
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "clientAuthenticatorType": "client-secret"
    },
    {
      "clientId": "backend-client",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "${BACKEND_CLIENT_SECRET}",
      "directAccessGrantsEnabled": false,
      "standardFlowEnabled": true,
      "serviceAccountsEnabled": true,
      "clientAuthenticatorType": "client-secret"
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Realm-level admin role"
      },
      {
        "name": "user",
        "description": "Realm-level user role"
      }
    ]
  },
  "groups": [
    {
      "name": "Admin",
      "attributes": {
        "description": ["Administrative users with full access"]
      },
      "realmRoles": [
        "admin"
      ]
    },
    {
      "name": "User",
      "attributes": {
        "description": ["Regular users with limited access"]
      },
      "realmRoles": [
        "user"
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": false,
      "firstName": "${APP_ADMIN_NAME}",
      "lastName": "${APP_ADMIN_LAST_NAME}",
      "email": "${APP_ADMIN_EMAIL}",
      "groups": ["Admin"],
      "realmRoles": ["admin"],
      "attributes": {
        "verifyEmail": "true"
      },
      "requiredActions": ["VERIFY_EMAIL", "CONFIGURE_TOTP"],
      "credentials": [
        {
          "type": "password",
          "value": "${APP_ADMIN_PASSWORD}",
          "temporary": true
        }
      ]
    }
  ]
}
