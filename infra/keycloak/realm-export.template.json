{
  "realm": "${REALM}",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "resetPasswordAllowed": true,
  "privateKey": "${KC_PRIVATE_KEY}",
  "publicKey": "${KC_PUBLIC_KEY}",
  "requiredCredentials": [ "password" ],
  "smtpServer": {
    "host": "${SMTP_HOST}",
    "port": "${SMTP_PORT}",
    "user": "${SMTP_USER}",
    "password": "${SMTP_PASSWORD}",
    "from": "${SMTP_FROM}",
    "auth": "true",
    "starttls": "true"
  },
  "userManagedAccessAllowed": true,
  "defaultGroups": ["/User"],
  "scopeMappings": [
    {
      "client": "frontend-client",
      "roles": ["user"]
    }
  ],
  "clients": [
    {
      "clientId": "frontend-client",
      "enabled": true,
      "publicClient": true,
      "protocol": "openid-connect",
      "redirectUris": [
        "${FRONTEND_URL}/*"
      ],
      "webOrigins": [
        "${FRONTEND_URL}"
      ],
      "rootUrl": "${FRONTEND_URL}",
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "serviceAccountsEnabled": false,
      "clientAuthenticatorType": "client-secret"
    },
    {
      "clientId": "backend-client",
      "enabled": true,
      "secret": "${BACKEND_CLIENT_SECRET}",
      "redirectUris": [
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:3000/*"
      ],
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": true, 
      "standardFlowEnabled": true,
      "clientAuthenticatorType": "client-secret",
      "authorizationSettings": {
        "resources": [
          {
            "name": "resource",
            "type": "urn:backend-client:resources:default",
            "ownerManagedAccess": false,
            "uris": [
              "/*"
            ],
            "scopes": [
              {
                "name": "view"
              },
              {
                "name": "write"
              }
            ]
          }
        ]
      }
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Realm-level admin role"
      },
      {
        "name": "user",
        "description": "Realm-level user role"
      }
    ]
  },
  "groups": [
    {
      "name": "Admin",
      "attributes": {
        "description": ["Administrative users with full access"]
      },
      "realmRoles": [
        "admin"
      ]
    },
    {
      "name": "User",
      "attributes": {
        "description": ["Regular users with limited access"]
      },
      "realmRoles": [
        "user"
      ]
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "emailVerified": false,
      "firstName": "${APP_ADMIN_NAME}",
      "lastName": "${APP_ADMIN_LAST_NAME}",
      "email": "${APP_ADMIN_EMAIL}",
      "groups": ["Admin"],
      "realmRoles": ["admin"],
      "attributes": {
        "verifyEmail": "true"
      },
      "requiredActions": ["VERIFY_EMAIL", "CONFIGURE_TOTP"],
      "credentials": [
        {
          "type": "password",
          "value": "${APP_ADMIN_PASSWORD}",
          "temporary": true
        }
      ]
    },
    {
      "username" : "user",
      "enabled": true,
      "email" : "sample-user@nodejs-example",
      "firstName": "Sample",
      "lastName": "User",
      "credentials" : [
        {
          "type" : "password",
          "value" : "password"
        }
      ],
      "realmRoles": [ "user" ],
      "clientRoles": {
          "account": ["view-profile", "manage-account"]
      }
    }
  ]
}
